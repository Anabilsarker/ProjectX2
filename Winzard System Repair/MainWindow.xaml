                <Image x:Name="Loading10" gif:ImageBehavior.AnimatedSource="Resources/Infinity-2s-200px.gif" Visibility="Hidden"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0">
